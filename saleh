-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "XeonLearningMenu"
screenGui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 350, 0, 500)
frame.Position = UDim2.new(0.5, -175, 0.5, -250)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Visible = false
frame.Parent = screenGui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "Xeon Learning Menu"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.Parent = frame

-- Scrolling Frame for players
local scrolling = Instance.new("ScrollingFrame")
scrolling.Size = UDim2.new(1, -20, 1, -60)
scrolling.Position = UDim2.new(0, 10, 0, 50)
scrolling.CanvasSize = UDim2.new(0, 0, 0, 0)
scrolling.BackgroundTransparency = 1
scrolling.Parent = frame

-- Sample Button Template
local sampleButton = Instance.new("TextButton")
sampleButton.Size = UDim2.new(1, -10, 0, 40)
sampleButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
sampleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
sampleButton.Visible = false
sampleButton.Parent = scrolling

-- Function to update player list
local function updatePlayerList()
	-- Clear old buttons
	for _, child in ipairs(scrolling:GetChildren()) do
		if child:IsA("TextButton") then
			child:Destroy()
		end
	end

	local yPos = 0
	for _, p in ipairs(Players:GetPlayers()) do
		if p ~= player then
			local btn = sampleButton:Clone()
			btn.Visible = true
			btn.Text = p.Name
			btn.Position = UDim2.new(0, 0, 0, yPos)
			btn.Parent = scrolling

			btn.MouseButton1Click:Connect(function()
				print("تعليمياً: ضغطت على اللاعب "..p.Name)
				-- مثال تعليمية: عرض رسالة، يمكنك إضافة أي شيء للتجربة
				local notification = Instance.new("TextLabel")
				notification.Size = UDim2.new(1, 0, 0, 30)
				notification.Position = UDim2.new(0, 0, 0, yPos + 45)
				notification.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
				notification.TextColor3 = Color3.fromRGB(255, 255, 255)
				notification.Text = "وظائف تعليمية هنا"
				notification.Parent = scrolling
				TweenService:Create(notification, TweenInfo.new(2), {BackgroundTransparency = 1, TextTransparency = 0.5}):Play()
			end)
			yPos = yPos + 50
		end
	end
	scrolling.CanvasSize = UDim2.new(0, 0, 0, yPos)
end

-- Update player list initially and on join/leave
updatePlayerList()
Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)

-- Toggle GUI with G
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	if input.UserInputType == Enum.UserInputType.Keyboard then
		if input.KeyCode == Enum.KeyCode.G then
			frame.Visible = not frame.Visible
		end
	end
end)
